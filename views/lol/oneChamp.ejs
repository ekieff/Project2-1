<h1><%= theChamp.name %></h1>

<form method="POST" action="/faves/new">
    <input type="button" value="Add to Faves">
</form>

<p><%= theChamp.lore %></p>
<img src="https://ddragon.leagueoflegends.com/cdn/img/champion/splash/<%= theChamp.name %>_0.jpg">

<ul>
    <li>Attack 
    <% for (let i = 0; i < theChamp.info.attack; i++)
    { %>
        *
    <% } %>
    </li>
    <li>Defense 
    <% for (let i = 0; i < theChamp.info.defense; i++)
    { %>
        *
    <% } %>
    </li>
    <li>Magic 
    <% for (let i = 0; i < theChamp.info.magic; i++)
    { %>
        *
    <% } %>
    </li>
    <li>Difficulty
    <% for (let i = 0; i < theChamp.info.difficulty; i++)
    { %>
        *
    <% } %>
    </li>
</ul>

<div id="carouselExampleIndicators" class="carousel slide skin-slides" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <% for (let i = 1; i < theChamp.skins.length - 1; i++)
        { %>
            <li data-target="#carouselExampleIndicators" data-slide-to="<%= i %>"></li>
        <% } %>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="https://ddragon.leagueoflegends.com/cdn/img/champion/splash/<%= theChamp.name %>_1.jpg" class="d-block w-100" alt="...">
        </div>
        <% for (let i = 2; i < theChamp.skins.length; i++)
        { %>
            <div class="carousel-item">
                <img src="https://ddragon.leagueoflegends.com/cdn/img/champion/splash/<%= theChamp.name %>_<%= theChamp.skins[i].num %>.jpg" class="d-block w-100" alt="...">
            </div>
        <% } %>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>