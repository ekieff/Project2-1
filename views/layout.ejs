    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/home.css">
    <link rel="stylesheet" href="/css/allChamps.css">
    <link rel="stylesheet" href="/css/oneChamp.css">
    <link rel="stylesheet" href="/css/profile.css">
  </head>
  <body class="<%= bodyClass %>">
    <header>
      <nav>
        <div class="nav-wrapper">
          <ul class="nav justify-content-end">
            <a href="/"><img class="brand-logo" src="../../images/nav-home.png"></a>
            <% if (!currentUser)
            { %>
              <li class="nav-item"><a class="nav-link" href="/">Home</a></li>
              <li class="nav-item"><a class="nav-link" href="/champs">Champions</a></li>
              <li class="nav-item"><a class="nav-link" href="/auth/signup">Signup</a></li>
              <li class="nav-item"><a class="nav-link" href="/auth/login">Login</a></li>
            <% }
            else
            { %>
              <li class="nav-item"><a class="nav-link" href="/">Home</a></li>
              <li class="nav-item"><a class="nav-link" href="/champs">Champions</a></li>

              <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="/" role="button" aria-haspopup="true" aria-expanded="false"><%= currentUser.dataValues.name %></a>
